@{
    ViewData["Title"] = "Email Confirmation";
}
@model PersonalSiteMVC.Models.ContactViewModel

<!-- ======= Main ======= -->
<main id="main">
    
    <!-- ======= Confirmation Section ======= -->
    <section class="contact" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">
        <div class="container">

            <div class="row">

                <div class="section-title">
                    <h2>Email Confirmation</h2>
                    <p></p>
                </div>
                <div>
                    <iframe style="border:0; width: 100%; height: 270px;" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d99110.79184827056!2d-94.43111241388571!3d39.07886296681554!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x87c103212e42f743%3A0x6e02087994d8d2fa!2sIndependence%2C%20MO!5e0!3m2!1sen!2sus!4v1709402865197!5m2!1sen!2sus" frameborder="0" allowfullscreen></iframe>
                </div>
            </div>

            <div class="row">

                <div class="col-lg-12">

                    <div class="info-box">
                        <i class="bx bx-check-circle"></i>
                        <h3>Message Sent!</h3>
                        <p>
                            Thank you for contacting me! I will respond to
                            your message using the provided email address, @Model.Email, in
                            the next 1-3 business days.
                        </p>

                        <br />

                        <div class="offset-3 col-md-6 text-center">
                            <p>
                                You sent the following message on
                                @DateTime.Now.Date.ToShortDateString() at
                                @DateTime.Now.ToShortTimeString() :
                            </p>
                        </div>

                        <br />

                        <div class="offset-3 col-md-6">
                            <p>
                                <em>@Model.Message</em>
                            </p>
                        </div>

                    </div>

                </div>

            </div>

        </div>
    </section><!-- End Confirmation Section -->


    </main>