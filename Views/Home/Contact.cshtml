@model PersonalSiteMVC.Models.ContactViewModel

@{
    ViewData["Title"] = "Contact";
}

<main id="main">

    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">
        <div class="container" data-aos="fade-up">

            <div class="section-title">
                <h2>Contact</h2>
                <p>Thank you for visiting my website! If you're interested in my work or have any questions, please feel free to contact me by your preferred method below.</p>
            </div>

            <div>
                <iframe style="border:0; width: 100%; height: 270px;" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d99110.79184827056!2d-94.43111241388571!3d39.07886296681554!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x87c103212e42f743%3A0x6e02087994d8d2fa!2sIndependence%2C%20MO!5e0!3m2!1sen!2sus!4v1709402865197!5m2!1sen!2sus" frameborder="0" allowfullscreen></iframe>
            </div>

            <div class="row mt-5">

                <div class="col-lg-4">
                    <div class="email">
                        <i class="bi bi-envelope"></i>
                        <h4>Email:</h4>
                        <p>tarynambrosi@gmail.com</p>
                    </div>

                    <div class="phone">
                        <i class="bi bi-linkedin"></i>
                        <h4>Message Me on LinkedIn:</h4>
                        <a href="https://www.linkedin.com/in/taryn-ambrosi" target="_blank">Click here!</a>
                    </div>

                </div>
                <div class="col-lg-8 mt-5 mt-lg-0" >
                    <form asp-action="Contact">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-md-6 form-group mt-3 md-0">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" placeholder="Name"/>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 form-group mt-3 md-0">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" placeholder="Email"/>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group mt-3">
                                <label asp-for="Subject" class="control-label"></label>
                                <input asp-for="Subject" class="form-control" placeholder="Subject"/>
                                <span asp-validation-for="Subject" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-3">
                                <label asp-for="Message" class="control-label"></label>
                                <textarea asp-for="Message" class="form-control" placeholder="Type your message here..."></textarea>
                                <span asp-validation-for="Message" class="text-danger"></span>
                            </div>
                            <div class="form-group my-2">
                                <input type="submit" value="Send Message" class="btn btn-primary" />
                            </div>
                        </div>

                    </form>
                </div>

            </div>

        </div>

        

    </section><!-- End Contact Section -->

</main><!-- End #main -->


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
